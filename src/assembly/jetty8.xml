<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>jetty8</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>net.anthavio.example:*</include>
			</includes>
			<excludes>
				<exclude>*:war:*</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib/ext</outputDirectory>
			<excludes>
				<exclude>net.anthavio.example:*</exclude>
				<exclude>*:war:*</exclude>
			</excludes>
		</dependencySet>
		<!-- jetty is in provided scope -->
		<dependencySet>
			<outputDirectory>lib/ext</outputDirectory>
			<scope>provided</scope>
			<excludes>
				<exclude>org.mortbay.jetty:*</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory></outputDirectory>
			<scope>provided</scope>
			<includes>
				<include>org.eclipse.jetty:jetty-start</include>
			</includes>
			<outputFileNameMapping>start.jar</outputFileNameMapping>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>src/assembly/common</directory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>src/assembly/jetty8</directory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>webapps/example</outputDirectory>
			<directory>src/test/webapp</directory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>lib</outputDirectory>
			<directory>target</directory>
			<includes>
				<include>*classes.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>etc</outputDirectory>
			<directory>src/main/resources</directory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>